<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ParentContactFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactFragment">

    <EditText
        android:id="@+id/CF_FIO"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="39dp"
        android:background="@drawable/border"
        android:hint="ФИО*"
        android:inputType="textPersonName"
        android:paddingStart="21dp"
        app:layout_constraintEnd_toStartOf="@+id/CF_guideline2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/CF_guideline1"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/CF_email"
        android:layout_width="0dp"
        android:layout_height="50dp"

        android:background="@drawable/border"
        android:hint="Эл. почта"
        android:inputType="textEmailAddress"
        android:paddingStart="21dp"
        app:layout_constraintEnd_toStartOf="@+id/CF_guideline2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/CF_guideline1"
        app:layout_constraintTop_toBottomOf="@id/CF_FIO"
        android:layout_marginTop="48dp"
       />

    <EditText
        android:id="@+id/CF_phone"
        android:layout_width="0dp"
        android:layout_height="50dp"

        android:background="@drawable/border"
        android:hint="Номер телефона*"
        android:inputType="phone"
        android:paddingStart="21dp"
        app:layout_constraintEnd_toStartOf="@+id/CF_guideline2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/CF_guideline1"
        app:layout_constraintTop_toBottomOf="@+id/CF_email"
        android:layout_marginTop="48dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/CF_guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="38dp" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/CF_guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.90" />


</androidx.constraintlayout.widget.ConstraintLayout>
